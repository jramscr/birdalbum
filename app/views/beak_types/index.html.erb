<%= render 'layouts/user_header_menu' %>

<div class="row">
  <div class="columns large-4 large-centered"><p id="notice"><%= notice %></p>

    <p>
      Exportar:
      <%= link_to "CSV", beak_types_path(format: :csv), class: "exportation-link" %> |
      <%= link_to "Excel", beak_types_path(format: :xls), class: "exportation-link" %>
    </p>

    <h1>Lista de Picos</h1>

    <table class="full-width-table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @beak_types.each do |beak_type| %>
          <tr>
            <td><%= beak_type.name %></td>
            <td><%= link_to 'Editar', edit_beak_type_path(beak_type) %></td>
            <td><%= link_to 'Eliminar', beak_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nuevo Pico', new_beak_type_path, class: 'round tiny button success right' %>
  </div>
</div>
