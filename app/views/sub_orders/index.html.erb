<div class="row">
  <div class="columns large-4 large-centered">
    <p id="notice"><%= notice %></p>

    <p>
      Exportar:
      <%= link_to "CSV", sub_orders_path(format: :csv) %> |
      <%= link_to "Excel", sub_orders_path(format: :xls) %>
    </p>

    <h1>Lista de Subordenes</h1>

    <table class="full-width-table">
      <thead>
        <tr>
          <th>Orden</th>
          <th>Nombre</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @sub_orders.each do |sub_order| %>
          <tr>
            <td><%= sub_order.order.name %></td>
            <td><%= sub_order.name %></td>
            <td><%= link_to 'Editar', edit_sub_order_path(sub_order) %></td>
            <td><%= link_to 'Eliminar', sub_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nuevo Suborden', new_sub_order_path, class: 'tiny round button right success' %>
  </div>
</div>
