<%= simple_form_for(@sub_order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :order_id, collection: Order.all.map { |order| [order.name, order.id] }%>
  </div>

  <div class="form-actions">
    <%= f.button :submit,"#{action_name == 'new' ? 'Crear' : 'Actualizar' }" , class: 'tiny button success round right'  %>
    <%= link_to 'Cancelar', sub_orders_path, class: 'tiny button alert round left'  %>
  </div>
<% end %>
