<%= render 'layouts/user_header_menu' %>
<div class="row">
  <div class="columns large-4 large-centered"><p id="notice"><%= notice %></p>

    <p>
      Exportar:
      <%= link_to "CSV", colors_path(format: :csv), class: "exportation-link" %> |
      <%= link_to "Excel", colors_path(format: :xls), class: "exportation-link" %>
    </p>

    <p>Lista de Colores</p>

    <table class="full-width-table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @colors.each do |color| %>
          <tr>
            <td><%= color.name %></td>
            <td><%= link_to 'Editar', edit_color_path(color) %></td>
            <td><%= link_to 'Eliminar', color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nuevo Color', new_color_path, class: 'round tiny button success right' %>
  </div>
</div>
