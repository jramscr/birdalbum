<%= render 'layouts/user_header_menu' %>
<div class="row">
  <div class="columns large-4 large-centered"><p id="notice"><%= notice %></p>

    <p>
      Exportar:
      <%= link_to "CSV", common_names_path(format: :csv), class: "exportation-link" %> |
      <%= link_to "Excel", common_names_path(format: :xls), class: "exportation-link" %>
    </p>

    <p>Lista de Nombres Comunes</p>

    <table class="full-width-table">
      <thead>
        <tr>
          <th>Descripción</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @common_names.each do |common_name| %>
          <tr>
            <td><%= common_name.name%></td>
            <td><%= link_to 'Editar', edit_common_name_path(common_name) %></td>
            <td><%= link_to 'Eliminar', common_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nuevo nombre común', new_common_name_path, class: 'round tiny button success right' %>
  </div>
</div>
