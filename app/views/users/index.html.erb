<%= render 'layouts/user_header_menu' %>
<div class="row">
  <div class="columns large-6 large-centered">
    <p id="notice"><%= notice %></p>

    <p>Lista de Usuarios</p>

    <table class="full-width-table">
      <thead>
        <tr>
          <th>Nombre de Usuario</th>
          <th>Correo</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Ver', user %></td>
            <td><%= link_to 'Editar', edit_user_path(user) %></td>
            <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>
