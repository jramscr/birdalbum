<%= render "layouts/user_header_menu" %>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="row collapse">
    <%= link_to 'Editar', edit_user_path(@user), class: 'left success round small button' %>
  </div>
  <br/>

  <h3><%= User.human_attribute_name(:username) %>: <p><%=  @user.username %></p></h3>
  <h3><%= User.human_attribute_name(:email) %>: <p><%= @user.email %></p></h3>
  <h3><%= User.human_attribute_name(:user_type) %>: <p><%= formatted_user_type(@user) %></p></h3>
</div>

