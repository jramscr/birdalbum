<%= simple_form_for(@bird) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :common_name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,"#{action_name == 'new' ? 'Crear' : 'Actualizar' }" ,class: 'right round' %>
  </div>
<% end %>
