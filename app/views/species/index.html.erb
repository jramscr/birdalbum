<div class="row">
  <div class="columns large-4 large-centered">
    <%= render 'layouts/user_header_menu' %>
    <p id="notice"><%= notice %></p>

    <p>Listing Species</p>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Gender</th>
          <th>Beak</th>
          <th>Size</th>
          <th>Quantity of eggs</th>
          <th>Zones</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @species.each do |species| %>
          <tr>
            <td><%= species.name %></td>
            <td><%= species.gender.name %></td>
            <td><%= formatted_beak_type(species) %></td>
            <td><%= formatted_size(species.size_id) %></td>
            <td><%= formatted_eggs_quantity(species) %></td>
            <td><%= formatted_zones_info(species) %></td>
            <td><%= link_to 'Show', species %></td>
            <td><%= link_to 'Edit', edit_species_path(species) %></td>
            <td><%= link_to 'Destroy', species, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nueva Especie', new_species_path, class: 'round tiny button success right' %>
  </div>
</div>
